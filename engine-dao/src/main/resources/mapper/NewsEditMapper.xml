<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.graduate.engine.mapper.NewsEditMapper">
    <select id="selectByUserId" resultType="com.graduate.engine.model.NewsEdit">
        select *
        from news_edit
        where edit_person_id = #{userId}
        order by edit_time desc
    </select>

    <select id="selectByDetailsId" resultType="com.graduate.engine.model.NewsEdit">
        select *
        from news_edit
        where details_id = #{detailsId}
    </select>
</mapper>
